{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "docker:build": "docker build -t fullstack-backend .",
    "docker:run": "docker run -d --name ostad -p 5001:5001 -v /e/Desktop/all/backend:/app all-backend",
    "docker:start": "docker-compose up  ",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -f",
    "build": "tsc",
    "start": "nodemon index.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "logs:view": "tail -f logs/application-$(date +%Y-%m-%d).log",
    "logs:error": "tail -f logs/error-$(date +%Y-%m-%d).log",
    "logs:clean": "rm -rf logs/*.log"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "nodemon": "3.1.10",
    "redis": "^5.8.2",
    "redis-adapter": "^0.2.0",
    "ts-node": "^10.9.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^7.0.3",
    "@types/redis": "^4.0.11",
    "@types/winston": "^2.4.4",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
